<h1 class='mb-4'>Sign in</h1>

<%= form_tag login_path do %>
  <div class="form-group">
    <%= label_tag :email %>
    <%= email_field_tag :email, nil, :class => 'form-control', :required => true, :autofocus => true %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, :class => 'form-control', :required => true %>
  </div>

  <p class="error">
    <%= flash[:error_invalid_email_password] %>
  </p>

  <%= submit_tag "Sign in", :id => 'custom-btn', :class => 'btn' %>
<% end %>
